@{
    ViewBag.Title = "Home Page";
}

@{ 
    var animals = new List<string> { "cat", "dog", "bird" };
}

<ul>
    @foreach (var animal in animals)
    {
        <li>@animal</li>
    }
</ul>

@{ 
    var usernames = new List<string> {"Bob","Mort","Elle","Shemp" };
    var greetings = new List<string> { "Hello, ", "Greetings, ", "Hi, ", "Hey, " };
}
 
<ul>
    @for (var i = 0; i < usernames.Count; i++)
    {
        <li>@greetings[i] @usernames[i]</li>
    }
</ul>

@if(System.DateTime.Now.DayOfWeek.ToString() == "Friday")
